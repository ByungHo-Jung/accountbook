<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="수입/지출 상세확인"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_inoutgroup"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/detail_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="수입" />

        <RadioButton
            android:id="@+id/detail_outcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="지출" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
                android:layout_marginLeft="20dp"
            android:background="@drawable/calendar1"/>
        <EditText
            android:id="@+id/et_date1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:hint="시작 날짜"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/calendar1"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/et_date2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border"
            android:textSize="15dp"
            android:hint="마지막 날짜"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button2"
            android:padding="6dp"
            android:text="최신 순"
            android:textSize="18sp"
            android:clickable="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button2"
            android:clickable="true"
            android:padding="6dp"
            android:text="오래된 순"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="금액 높은 순"
            android:background="@drawable/round_button2"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:clickable="true"/>

        <TextView
            android:id="@+id/low"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button2"
            android:text="금액 낮은 순"
            android:textSize="18sp"
            android:textStyle="bold"
            android:clickable="true"/>

    </LinearLayout>

    <Button
        android:layout_gravity="right"
        android:id="@+id/detail_search"
        android:padding="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_search_24"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>